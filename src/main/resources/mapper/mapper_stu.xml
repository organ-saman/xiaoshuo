<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xiaoshuo.dao.UserDao">
    <sql id="user_info">
         id,user_id,pass_word,user_name,gender,birthday,mark,phone_number,create_time,update_time
    </sql>
    <select id = "getUser" resultType = "com.example.xiaoshuo.entity.UserInfo">
        select 
        <include refid="user_info"/>
        from stu
        <where>
            <if test="userId !=null and userId !=''">
                user_id=#{userId}
            </if>
        </where>
    </select>
    <insert id="insertUser" parameterType="com.example.xiaoshuo.entity.UserInfo">
        insert into stu
        <trim prefix="(" suffix=")">
            <include refid="user_info"></include>
        </trim>
        values
        <trim prefix="(" suffix=")">
                #{UserInfo.id},
                #{UserInfo.userId},
                #{UserInfo.passWord},
                #{UserInfo.userName},
                #{UserInfo.gender},
                #{UserInfo.birthday},
                #{UserInfo.mark},
                #{UserInfo.phoneNumber},
                #{UserInfo.createTime},
                #{UserInfo.updateTime}
        </trim>
    </insert>
</mapper>



